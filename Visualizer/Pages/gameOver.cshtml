@page "/gameOver"
@using Risk.Shared
@model Visualizer.Pages.gameOverModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "GameOver";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

    <title>
        PlayByPlay
    </title>
</head>




<style>
</style>

<br />
<br />


<form method="get">
    <button type="submit" asp-page="./Visualizer">Back to Visualizer</button>
</form>


<!--Player Stats-->

<div class="playerStats">
    <table cellpadding="2px, 10px">


        @foreach (var p in Model.gameOverRequest.FinalScores.ToArray())
        {
            <tr>
                <td>@p</td>
            </tr>
        }
    </table>


    <p>@Model.gameOverRequest.WinnerName</p>
    <p>@Model.gameOverRequest.GameDuration</p>

</div>


<div class="grid-container">
    <table border="1px" cellpadding="10px">
        @for (var row = 0; row <= Model.MaxRow; row++)
        {
            <tr>
                @for (var col = 0; col <= Model.MaxCol; col++)
                {
                    var cell = Model.gameOverRequest.FinalBoard.First(t => t.Location == new Location(row, col));

                    <td class="cell">
                        <div class="location">@cell.Location</div>
                        <div class="armies">@cell.Armies</div>
                        <div class="name">@cell.OwnerName</div>
                    </td>
                }
            </tr>
        }
    </table>
</div>
